{
  "name": "degis-core",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat deploy",
    "coverage": "npx hardhat coverage --testfiles 'test/**/*.ts' --network hardhat --solcoverjs ./.solcover.js",
    "docgen": "npx solidity-docgen --solc-module solc-0.8 -t templates/ -o docs/solidity-docgen",
    "hardhat-docgen": "yarn run hardhat docgen",
    "export-abi": "yarn run hardhat export-abi",
    "clear-abi": "yarn run hardhat clear-abi",
    "uml-staking": "npx sol2uml ./contracts/staking -f png -o ./docs/uml/staking.png",
    "uml-flight": "npx sol2uml ./contracts/miserable-flight -f png -o ./docs/uml/miserable-flight.png",
    "uml-farming": "npx sol2uml ./contracts/farming -f png -o ./docs/uml/farming.png",
    "uml-luckybox": "npx sol2uml ./contracts/lucky-box -f png -o ./docs/uml/lucky-box.png",
    "uml-price": "npx sol2uml ./contracts/naughty-price -f png -o ./docs/uml/naughty-price.png",
    "contract-size": "yarn run hardhat size-contracts",
    "addPool": "npx hardhat addPool",
    "addSigner": "npx hardhat addSigner",
    "deployNPToken": "npx hardhat deployNPToken",
    "deployNPPool": "npx hardhat deployNPPool"
  },
  "keywords": [
    "Degis",
    "Smart Contracts"
  ],
  "author": "Eric Lee",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.1",
    "@openzeppelin/hardhat-upgrades": "^1.16.0",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "hardhat-abi-exporter": "^2.7.2",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-deploy": "^0.9.24",
    "hardhat-docgen": "^1.3.0",
    "mocha": "^9.1.3",
    "prb-math": "^2.4.1",
    "sol2uml": "^1.1.29",
    "solc-0.8": "npm:solc@0.8.10",
    "solidity-docgen": "^0.5.16"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "tabWidth": 4,
          "printWidth": 80,
          "bracketSpacing": true
        }
      }
    ]
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.0",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^5.2.0",
    "typescript": "^4.7.3"
  }
}
